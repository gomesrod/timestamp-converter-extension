{
  "name": "Timestamp Tools",
  "version": "0.0.2",
  "description": "Easier interactions with timestamps in web pages",
  "permissions": [
    "contextMenus", "declarativeContent", "activeTab", "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_title": "Timestamp tools",
    "default_icon": {
      "16": "images/time-icon-16.png",
      "32": "images/time-icon-32.png"
    }
  },

  "icons": {
    "16": "images/time-icon-16.png",
    "32": "images/time-icon-32.png"
  },

  "web_accessible_resources": [
    {
      "resources": ["content/converter_panel.html", "content/converter_panel.js"],
      "matches": []
    }
  ],

  "manifest_version": 3
}

